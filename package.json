{
  "name": "bb84-qkd-demo",
  "version": "1.0.0",
  "description": "Interactive BB84 Quantum Key Distribution Demo Game",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:all": "npm run install:frontend && npm run install:backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["quantum", "cryptography", "bb84", "qkd", "demo"],
  "author": "BB84 QKD Demo",
  "license": "MIT"
}
